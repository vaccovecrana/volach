{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "module": "es6",
    "target": "es6",
    "lib": ["dom", "ES2019"],
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "react": ["node_modules/preact/compat"],
      "react-dom": ["node_modules/preact/compat"]
    }
  }
}
